<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect 4</title>
    <link href="/stylesheets/splash.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div id="splashGrid">
        <section id="cloudSection">
            <div id="title">
                <h1 class="noselect">
                    Connect<sup>4</sup>
                </h1>
            </div>
        </section>

        <section id="statsSection">
            <div id="statsContainer">
                <div class="stat">
                    <div class="statName noselect">
                        Active Rooms
                    </div>
                    <div id="activeRooms" class="statValue noselect">
                        <%- activeRooms %>
                    </div>
                </div>
                <div class="stat">
                    <div class="statName noselect">
                        Avg Playtime
                    </div>
                    <div id="averagePlaytime" class="statValue noselect">
                        <%- minutes + ":" + seconds %>
                    </div>
                </div>
                <div class="stat">
                    <div class="statName noselect">
                        Games Played
                    </div>
                    <div id="totalGames" class="statValue noselect">
                        <%- totalGames %>
                    </div>
                </div>
            </div>
        </section>

        <section id="userSection">
            <div id="userForm">
                <div id="usernameContainer" class="formItem">
                    <input id="usernameInput" type="text" id="username">
                </div>
                <form class="formItem" action="/play" method="get">
                    <button id="playButton">Play</button>
                </form>
                <form class="formItem" action="/rules" method="get">
                    <button id="rulesButton">How To?</button>
                </form>
            </div>
        </section>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="javascripts/splash.js"></script>
</body>

</html>